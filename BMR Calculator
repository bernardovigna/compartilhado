<h4>Taxa Metabólica Basal (TMB):</h4>
    <h3 id="MB">0</h3>

<h4>Calorias necessárias para manter o peso:</h4>
    <h3 id="CN">0</h3>
    
<h4>Calorias necessárias para perder peso:</h4>
    <h3 id="CE">0</h3>
    
<h4>Calorias necessárias para ganhar peso:</h4>
    <h3 id="CS">0</h3>
    
<script>

    genero = [field id="genero"].value;
    peso = [field id="peso"].value;
    altura = [field id="altura"].value;
    idade = [field id="idade"].value;
    nivel = [field id="nivel"].value;

	if(genero == "Masculino"){

				b1 = 13.7 * peso;
				b2 = 5.0 * altura;
				b3 = 6.8 * idade;

				teste = 66 + b1 + b2 - b3;

				MB.value = teste;
	

    if(nivel == "Sedentário - pouco ou nenhum exercício")
    {teste2 = teste * 1.2; 
    CN.value = teste2;
    CE.value = teste2 * 0.85;
    CS.value = teste2 * 1.15;
    }
        else if(nivel=="Levemente Ativo - exercícios leves 1-3 dias por semana")
        {teste2 = teste * 1.375;
        CN.value = teste2;
        CE.value = teste2*0.85;
        CS.value = teste2*1.15;
        } 
        
    	else if(nivel=="Moderadamente Ativo - exercício moderado 3-5 dias por semana")
    	{teste2 = teste * 1.55;
    	CN.value = teste2; 
    	CE.value = teste2*0.85; 
    	CS.value = teste2* 1.15;
    	} 
    	
        else if(nivel=="Muito Ativo - exercício intenso de 6 a 7 dias por semana")
        {teste2 = teste* 1.725;
        CN.value = teste2 ;
        CE.value = teste2*0.85;
        CS.value = teste2* 1.15;
        } 
        
    	else if(nivel=="Extra Ativo - Treina intensamente ou trabalha com atividade física")
    	{ teste2 = teste * 1.9; 
    	CN.value = teste2 ;
    	CE.value = teste2*0.85;
    	CS.value = teste2 * 1.15;
    	}


	} else if(genero == "Feminino"){

	b1 = 9.6 * parseInt(peso);
	b2 = 1.8 * parseInt(altura);
	b3 = 4.7 * parseInt(idade);

	teste = 665 + b1 + b2 - b3;

	MB.value = teste;


	 if(nivel == "Sedentário - pouco ou nenhum exercício")
    {teste2 = teste * 1.2; 
    CN.value = teste2;
    CE.value = teste2 * 0.85;
    CS.value = teste2 * 1.15;
    }
        else if(nivel=="Levemente Ativo - exercícios leves 1-3 dias por semana")
        {teste2 = teste * 1.375;
        CN.value = teste2;
        CE.value = teste2*0.85;
        CS.value = teste2*1.15;
        } 
        
    	else if(nivel=="Moderadamente Ativo - exercício moderado 3-5 dias por semana")
    	{teste2 = teste * 1.55;
    	CN.value = teste2; 
    	CE.value = teste2*0.85; 
    	CS.value = teste2* 1.15;
    	} 
    	
        else if(nivel=="Muito Ativo - exercício intenso de 6 a 7 dias por semana")
        {teste2 = teste* 1.725;
        CN.value = teste2 ;
        CE.value = teste2*0.85;
        CS.value = teste2* 1.15;
        } 
        
    	else if(nivel=="Extra Ativo - Treina intensamente ou trabalha com atividade física")
    	{ teste2 = teste * 1.9; 
    	CN.value = teste2 ;
    	CE.value = teste2*0.85;
    	CS.value = teste2 * 1.15;
    	}
		}
	}
}

</script>
